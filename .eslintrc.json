{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true,
        "commonjs": true
    },
    "extends": "eslint:recommended",
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", "tab", { "ignoredNodes": ["PropertyDefinition"] }],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "comma-dangle": [
            "error",
            {
                "objects": "always"
            }
        ],
        "brace-style": [
            "error",
            "1tbs"
        ],
        "object-curly-spacing": [
            "error",
            "always"
        ],
        "no-console": 2,
        "curly": [
            "error",
            "multi-or-nest"
        ],
        "arrow-body-style": [
            "error",
            "as-needed"
        ]
    }
}
